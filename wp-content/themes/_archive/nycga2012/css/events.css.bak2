/*Event styles to add to CSS*/

.event-page h1,
.event-page #em-wrapper h1,
.event-page #em-wrapper h2,
.event-page #em-wrapper h3,
.event-page .subhead,
.event-page .submit-button {
	font-family: 'OSWALD', Arial, sans-serif; font-weight: normal;
	text-transform: uppercase;
	line-height: 1.5;
}
.event-page #em-wrapper h2 {
	font-size: 32px;
}
.event-page #em-wrapper h3,
.event-page #em-wrapper .subhead {
	font-size: 24px;
}

	.event-page #em-wrapper h2.pagetitle {
		padding: .25em .5em;
		background: #ffcc00;
		text-size: 33px;
	}
.event-details {
	float:left;
	width:20%;
	padding: 0 2em 0 0;
	border-right: 1px solid #333;
}
	div.event-details h2,
	div.event-details h3 {
		padding-top: 0;
		padding-bottom: 5px;
		margin-bottom: 0;
		color: #222;
		text-shadow: 1px 1px 0 #eee;
	}
	div.event-details h2 {
		border-bottom: 1px solid #333;
		font-size: 32px;
	}
	div.event-details h3 {
		font-size: 1.25em;
	}
	
.event-body {
	float:left;
	width: 70%;
	padding-left: 2em;
}
	.event-body h2,
	.event-body h3 {
		line-height:1em;
		color: #333;
		text-shadow: 1px 1px 0 #eee;
	}
	.event-body h2 {
		font-size: 32px;
	}
.event-map-larger-link {
	color: rgb(0, 0, 255);
	text-align: left;
}
.event-body-image {
	float: right;
	padding: 0 0 2em 2em;
}
	.event-body-image img {
		width:300px;
		border: 1px solid #666;
		-moz-border-radius: 10px;
		-webkit-border-radius: 10px;
		border-radius: 10px;
	}
.clearfloat {
	clear:both;
}

/* Event Form Styles */

/*.event-form fieldset {
		border: 1px solid #ccc;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		border-radius: 2px;
		padding: .5em;
}*/

	.event-form fieldset {
		background:#eee;
		padding: 2em;
		border: 1px solid #ccc;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		border-radius: 2px;
		-moz-box-shadow:    inset 0 0 10px #ccc;
		-webkit-box-shadow: inset 0 0 10px #ccc;
		box-shadow:         inset 0 0 10px #ccc;
		padding: .5em;
	}


.event-form p {
	line-height: 14px;
	display: block;
	padding: 1px 0;
	margin: 0;
}

.event-form label {
	float: left;
	width: 125px;
	line-height: 14px;
	text-align: right;
	font-size: 13px;
	padding-right: 5px;
}
.event-form input {
		min-width: 225px;
}
	.event-form label.subhead {
		float: none;
		display: block;
		width: 100%;
		text-align: left;
		padding: 10px 0 5px 0;
	}
	
	.event-form input.submit-button { 	
		width: 95px;
		color: #333; 
		font-size: 18px;
		text-transform: uppercase; 
		
		margin-top: 10px;
		background-color: #ffcc00;
		border: none;
		
		/* -- CSS3 Transition - define which property to animate (i.e. the shadow)  -- */
		-webkit-transition: -webkit-box-shadow 0.3s linear;
		
		/* -- CSS3 - Rounded Corners -- */
		-moz-border-radius: 4px; 
		-webkit-border-radius: 4px;
		border-radius: 4px; 
						
		/* -- CSS3 Shadow - create a shadow around each input element -- */ 
		background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ffcc00), to(#ffdf5f)); 
		background: -moz-linear-gradient(25% 75% 90deg,#ffdf5f, #ffcc00);		
	} 
	.event-form input.submit-button:hover { 	
		background-color: #1db7da;
		background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#1db7da), to(#61cadf)); 
		background: -moz-linear-gradient(25% 75% 90deg,#61cadf, #1db7da);		
		cursor:  pointer;
	}

/*Styles for Tabbed Content*/
	.ui-tabs-nav a {
		font-size:18px;
	}
	.event-form #tabs label,
	.event-form #tabs input,
	.event-form #tabs select,
	.event-form #tabs .interval-desc {
		line-height: 14px;
		font-family: Helvetica,Arial,sans-serif;
	}
	.event-form #tabs input {
		min-width: 0;
	}
	.event-form #tabs .interval-desc {
		font-size: 13px;
	}
	.event-form #tabs fieldset {
		background:#eee;
		padding: 2em;
		border: 1px solid #ccc;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		border-radius: 2px;
		-moz-box-shadow:    inset 0 0 10px #ccc;
		-webkit-box-shadow: inset 0 0 10px #ccc;
		box-shadow:         inset 0 0 10px #ccc;
		padding: .5em;
	}
		.event-form #tabs fieldset fieldset {
			background: #fff;
			-moz-box-shadow:    none;
			-webkit-box-shadow: none;
			box-shadow:         none;
			}

/* Event List	 */
div#em-wrapper h2 {
	font-size: 1.25em;
	padding: 1px 4px;
	margin-bottom: 0;
	background-color: #ffcc00;
}

div#em-wrapper table.events-table tbody tr {
	border-bottom: 1px solid #ccc;
}

div#em-wrapper table.events-table tbody trp:last-child {
	border-bottom:none;
}

/* Event Search */

div.em-events-search {
		background:#eee;
		padding: 2em;
		border: 1px solid #ccc;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		border-radius: 2px;
		-moz-box-shadow:    inset 0 0 10px #ccc;
		-webkit-box-shadow: inset 0 0 10px #ccc;
		box-shadow:         inset 0 0 10px #ccc;
		padding: .5em;
}

div.em-events-search form.em-events-search-form p,
div.em-events-search form.em-events-search-form br,
div.em-events-search form.em-events-search-form input,
div.em-events-search form.em-events-search-form select {
	display: inline;
}

div.em-events-search form.em-events-search-form table tbody tr {
	vertical-align: top;
}

em-events-search-category {
	max-width: 100px;
}

/* Event Frontend Admin */
div.post-content div.entry div.event-actions {
		background:#eee;
		padding: 2em;
		border: 1px solid #ccc;
		-moz-border-radius: 2px;
		-webkit-border-radius: 2px;
		border-radius: 2px;
		-moz-box-shadow:    inset 0 0 10px #ccc;
		-webkit-box-shadow: inset 0 0 10px #ccc;
		box-shadow:         inset 0 0 10px #ccc;
		padding: .5em;
}
div.post-content div.entry div.event-actions a. {
	margin: 0 10px;
}

/* Location Map */

div.em-map-balloon-content {
	font-size: 11px;
	line-height: .9em;
}

div.em-map-balloon-content strong {
	text-transform: uppercase;
	font-size: 1.25em;
	font-family: 'OSWALD', Arial, sans-serif; font-weight: normal;
}

#locationMap {
	display: none;
}

/* Edit Form */

form#event-form h4 {
	font-weight: normal !important;
}